{
  "name": "react-pixi-tilemap",
  "version": "2.0.2",
  "description": "Use maps created with Tiled in your React-based Pixi.js games",
  "source": "src/index.js",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "cd demo && yarn start",
    "watch": "microbundle watch --jsx React.createElement",
    "start": "concurrently \"yarn:watch\" \"yarn:dev\"",
    "build": "microbundle build --jsx React.createElement",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "react",
    "pixi",
    "tiled",
    "tmx",
    "tilemap",
    "tileset"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/vocksel/react-pixi-tilemap"
  },
  "bugs": {
    "url": "https://github.com/vocksel/react-pixi-tilemap/issues"
  },
  "author": "David Minnerly",
  "license": "MIT",
  "peerDependencies": {
    "@inlet/react-pixi": ">=6.5.2",
    "pixi.js": ">=6.0.4",
    "react": ">=17.0.2"
  },
  "dependencies": {
    "tmx-parser": "github:kenlck/node-tmx-parser"
  },
  "devDependencies": {
    "concurrently": "^6.2.0",
    "microbundle": "^0.13.0"
  }
}
